<div class="row">
  <%= link_to new_kanban_board_path do %>
    <%= icon("plus-square-o") %>
    New Kanban Board
  <% end %>
  <h1>Kea Boards</h1>
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Public visible</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @kanban_boards.each do |kanban_board| %>
        <tr>
          <td>
            <%= link_to kanban_board.title, kanban_board %>
          </td>
          <td>
            <%= kanban_board.description %>
          </td>
          <td>
            <%= icon("eye#{"-slash" unless kanban_board.public_visible}") %>
          </td>
          <td>
            <%= link_to icon("pencil"), edit_kanban_board_path(kanban_board) %>
          </td>
          <td>
            <%= link_to icon("trash"), kanban_board, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br/>
</div>