<div aria-labelledby="myModalLabel" class="modal fade" data-kanban-board-id="<%= @kanban_board.id %>" id="new-task-modal" role="dialog" tabindex="-1">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button aria-label="Close" class="close" data-dismiss="modal" type="button">
          <span aria-hidden="true">Ã—</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">New task</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="error-descriptions"></div>
        </div>
        <form class="form-horizontal">
          <div class="field form-group">
            <label class="col-sm-2 control-label" for="title">
              <%= t "activerecord.attributes.task.title" %>
            </label>
            <div class="col-sm-10">
              <%= text_field_tag "[task][title]", nil, placeholder: "Title", class: "form-control" %>
            </div>
          </div>
          <div class="field form-group">
            <label class="col-sm-2 control-label" for="priority">
              <%= t "activerecord.attributes.task.priority" %>
            </label>
            <div class="col-sm-10">
              <div class="btn-group" data="<%= {toggle:"buttons"} %>"
                <% Task::DEFAULT_PRIORITIES.each do |priority| %>
                  <label class="btn btn-<%= task_class_by_priority(priority) %>" for="priority">
                    <%= radio_button_tag("[task][priority]", priority) %>
                    <%= priority %>
                  </label>
                <% end %>
              </div>
            </div>
          </div>
          <%= hidden_field_tag("[task][current_status]") %>
        </form>
      </div>
      <div class="modal-footer">
        <button class="btn btn-default" data-dismiss="modal" type="button">Close</button>
        <button class="btn btn-primary" id="new-task-modal-submit" type="button">Save changes</button>
      </div>
    </div>
  </div>
</div>
